extends layout

block content
	.row
		.col-md-6
			h3 Making New Room
			form(role='form').form-horizontal
				.form-group
					label(for='name').col-sm-4.control-label Room Name
					.col-sm-8
						input(type='text').form-control#name
				.form-group
					label(for='password').col-sm-4.control-label Password
					.col-sm-8
						input(type='password').form-control#password
				.form-group
					label(for='explain').col-sm-4.control-label Explanation
					.col-sm-8
						textarea.form-control#explain
				.form-group
					.col-sm-offset-4.col-sm-8
						button(type='submit').btn.btn-default Submit
